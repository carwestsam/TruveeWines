    <script type="text/javascript">
        var app = angular.module("app", []);
        app.controller( 'ctrl' , ['$scope','$http', function( $scope, $http ){
            console.log( "post2" );
            $scope.name = "hello";
            $scope.c = {} 
            $scope.c.name = "";
            $scope.c.age = "";
            $scope.submit = function (){
                console.log( $scope.c );
                $http
                    .post('/postphp2.php', {msg: JSON.stringify($scope.c) })
                    .success( function( data, status, headers, config ){
                        console.log('success');
                    } )
                    .error( function( data, status, headers, config ){
                        console.log('failed');
                    } )
            }
        }] )
    </script>
    <body ng-app="app" ng-controller="ctrl" >
        <form novalidate >
            name : <input type="text" ng-model="c.name"/ ><br/>
            age: <input type="text" ng-model="c.age"/> <br/>
            <button ng-click="submit()">hehe</button>
        </form>
